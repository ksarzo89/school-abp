<div ng-controller="test.views.group.list as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6  text-left">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("TitleGroup")</span>
                    </h1>
                </div>
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <button class="btn btn-primary blue" ng-click="vm.addGroup()"><i class="fa fa-plus"></i> @L("CreateNewGroup")</button>
        </div>
    </div>
    <div class="portlet light">
        <div class="portlet-body">
            <div ng-if="vm.groups.length == 0">
                <p>
                    @L("CountGroup") - <span>{{vm.getGroupCountText()}}</span>
                </p>
            </div>
            <div ng-if="vm.groups.length != 0">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>@L("NameLabel")</th>
                            <th class="text-right">@L("ActionLabel")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="group in vm.groups">
                            <td>{{group.name}}</td>
                            <td class="text-right">
                                <button ng-click="vm.editGroup($index)" title="@L("EditLabel")" class="btn btn-circle">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                <button ng-click="vm.deleteGroup($index)" title="@L("DeleteLabel")" class="btn btn-circle">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>