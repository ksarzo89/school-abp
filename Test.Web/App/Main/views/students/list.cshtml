<div ng-controller="test.views.students.list as vm">
    <div class="row margin-bottom-5">
        <div class="col-xs-6  text-left">
            <div class="page-head">
                <div class="page-title">
                    <h1>
                        <span>@L("TitleStudent")</span>
                    </h1>
                </div>
            </div>
        </div>
        <div class="col-xs-6 text-right">
            <button class="btn btn-primary blue" ng-click="vm.addStudent()"><i class="fa fa-plus"></i> @L("CreateNewStudent")</button>
        </div>
    </div>
    <div class="portlet light">
        <div class="portlet-body">
            <div row margin-bottom-5>
                <div class="col-xs-12 text-right">
                    <select id="idGroup" ng-model="groupSelect" ng-options="group.id as group.name for group in groups">
                        <option value="">@L("AllLabel")</option>
                    </select>
                    <hr>
                </div>
            </div>


            <div ng-if="vm.students.length == 0">
                <p>
                    @L("CountStudent") - <span>{{vm.getStudentCountText()}}</span>
                </p>
            </div>
            <div ng-if="vm.students.length != 0">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                <a href="" ng-click="vm.sortTo('fullName')">@L("FullNameLabel")</a>
                                <span class="caret" style="cursor: pointer" ng-click="vm.sortTo('-fullName')"></span>
                            </th>
                            <th>@L("CILabel")</th>
                            <th>@L("AgeLabel")</th>
                            <th>@L("GroupLabel")</th>
                            <th class="text-right">@L("ActionLabel")</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="student in vm.students | orderBy:vm.sortSelect">
                            <td>{{student.fullName}}</td>
                            <td>{{student.ci}}</td>
                            <td>{{student.age}}</td>
                            <td>
                                <p ng-show="student.assignedGroupId">{{student.assignedGroupName}}</p>
                            </td>
                            <td class="text-right">
                                <button ng-click="vm.editStudent($index)" title="@L("EditLabel")" class="btn btn-circle">
                                    <i class="fa fa-pencil"></i>
                                </button>
                                <button ng-click="vm.deleteStudent($index)" title="@L("DeleteLabel")" class="btn btn-circle">
                                    <i class="fa fa-trash"></i>
                                </button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
